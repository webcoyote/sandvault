#!/usr/bin/env bash
set -Eeuo pipefail

if [[ ! -x "$HOME/.local/bin/claude" ]]; then
    #env \
    #    NODE_ENV=dev \
    #    NODE_DEBUG=* \
    #    DEBUG=* \
    #    curl -fsSL https://claude.ai/install.sh | bash -x
    curl -fsSL https://claude.ai/install.sh | bash
fi

exec "$HOME/.local/bin/claude" --dangerously-skip-permissions "$@"
