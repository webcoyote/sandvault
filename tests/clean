#!/bin/bash
# Cleanup build files
set -Eeuo pipefail
trap 'echo "${BASH_SOURCE[0]}: line $LINENO: $BASH_COMMAND: exitcode $?"' ERR
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

shopt -s nullglob
for dir in *; do
    [[ -d "$dir" ]] || continue
    rm -rf "$dir/.build" -rf || true
done
shopt -u nullglob
